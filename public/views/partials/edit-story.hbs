<div class="edit_story">
    <form id="">
        <div class="form-group_user">
            <label for="" class="title">Tên truyện</label>
            <input type="text" class="info" value="{{ story.nameStory }}">
        </div>
        <div class="form-group_user">
            <label for="" class="title">Tên tác giả</label>
            <input type="text" class="info" value="{{ story.nameAuthor }}">
        </div>
        <div class="form-group_user">
            <label for="" class="title">Loại truyện</label>
            <select class="type_story" name="typeStory" id="">
                <option value="storyCompose" {{gender 'storyCompose' story.typeStory}}>Truyện sáng tác</option>
                <option value="storyTranslate" {{gender 'storyTranslate' story.typeStory}}>Truyện dịch</option>
            </select>
        </div>
        <div class="form-group_user">
            <label for="" class="title">Chapter hiện tại</label>
            <input type="text" class="info" value="{{ story.chapterPresent }}" disabled>
        </div>
        <div class="form-group_user">
            <label for="" class="title">Ảnh bìa truyện</label>
            <img class="cover_image" src="{{ showAvatar story.coverImage }}" alt="avatar">
        </div>
    </form>
</div>