<div class="detail_account">
    <div class="update_profile">
        <form action="/private/change-password?_method=PATCH" method="POST">
            <div class="form-group_user">
                <label for="" class="title">Mật khẩu cũ</label>
                <input type="password" class="info" name="oldPassword" required>
            </div>
            <div class="form-group_user">
                <label for="" class="title">Mật khẩu mới</label>
                <input type="password" class="info" name="newPassword" required>
            </div>
            <div class="form-group_user">
                <label for="" class="title">Xác nhận mật khẩu mới</label>
                <input type="password" class="info" name="confirmPassword" required>
            </div>
            <div class="form-group_user">
                <button class="btn">
                    <i class="fas fa-pencil-alt"></i>
                    Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>