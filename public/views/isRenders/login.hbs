<div class="signin">
    <img src="../img/bg_signin.jpg" alt="" class="sign-image">
    <div class="signin-container">
        <div class="tab">
            <div class="tab-item is-active">Sign in</div>
            <div class="tab-item">Sign up</div>
        </div>
        <h1 class="signin-heading">Sign in</h1>
        <form class="signin-form" autocomplete="off" action="/public/action-login" method="POST">
            <div class="form-group">
                <label for="name" class="form-label">Full name</label>
                <input type="text" id="fullname" class="form-input" placeholder="Ex: Wibu Chua" required name="fullname">
            </div>
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" class="form-input" placeholder="Ex: wibuchua@email.com" required
                    name="email">
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-input" placeholder="************" required
                    name="password">
            </div>
            <div class="form-group" hidden>
                <label for="re-password" class="form-label">Repeat password</label>
                <input type="password" id="re-password" class="form-input" placeholder="************"
                    name="re_password"> 
            </div>
            <div class="form-group signin-term" hidden> 
                By clicking you agree with our <a href="#" class="signin-term-link">Term of use.</a>
            </div>
            <button type="submit" class="btn btn--gradient btn-sign">Sign in</button>
        </form>
    </div>
</div>